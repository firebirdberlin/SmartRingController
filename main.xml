<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SmartRingController">

	<TextView
			android:id="@+id/tvMinAmplitude"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/setting_min_amplitude"
			android:layout_weight="1"
			android:scrollHorizontally="false"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearance"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			/>

	<SeekBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="min. Volume"
			android:max="10000"
			android:progress="1000"
			android:id="@+id/SeekBarMin"
			android:layout_below="@+id/tvMinAmplitude"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
	/>

	<TextView
			android:id="@+id/tvMaxAmplitude"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/setting_max_amplitude"
			android:layout_weight="1"
			android:scrollHorizontally="false"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearance"
			android:layout_below="@+id/SeekBarMin"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			/>

	<SeekBar
		   android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="max. Volume"
			android:max="50000"
			android:progress="10000"
			android:id="@+id/SeekBarMax"
			android:layout_below="@+id/tvMaxAmplitude"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
	/>

	<TextView
			android:id="@+id/tvMinRingerVolume"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/setting_min_ringer_volume"
			android:layout_weight="1"
			android:scrollHorizontally="false"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearance"
			android:layout_below="@+id/SeekBarMax"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			/>

	<SeekBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:max="6"
			android:progress="1"
			android:id="@+id/SeekBarMinRingerVolume"
			android:layout_below="@+id/tvMinRingerVolume"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
	/>

	<Switch
			android:id="@+id/SwitchHandleVibration"
			android:textOn="@string/switch_handle_vibration_ON"
			android:textOff="@string/switch_handle_vibration_OFF"
			android:layout_width="match_parent"
			android:minWidth="1000dp"
			android:layout_height="wrap_content"
			android:checked="true"
			android:layout_below="@+id/SeekBarMinRingerVolume"
	/>

	<Switch
			android:id="@+id/SwitchHandleNotification"
			android:textOn ="@string/switch_handle_notification_ON"
			android:textOff="@string/switch_handle_notification_OFF"
			android:minWidth="200dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:checked="true"
			android:layout_below="@+id/SwitchHandleVibration"
	/>

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Set Volume"
			android:id="@+id/btnClearNotify"
			android:onClick="buttonClicked"
			android:layout_below="@+id/SwitchHandleNotification"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"/>


	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Send test notification"
			android:id="@+id/btnTestNotify"
			android:onClick="buttonClicked"
			android:layout_below="@+id/btnClearNotify"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"/>

	<ScrollView android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentBottom="true"
				android:layout_below="@+id/btnTestNotify"
				android:layout_alignLeft="@+id/btnTestNotify">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text=""
				android:id="@+id/textView"
				/>


	</ScrollView>

</RelativeLayout>
