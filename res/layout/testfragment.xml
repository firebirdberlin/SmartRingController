<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <TextView
            android:id="@+id/tvTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvTest"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_alignParentLeft="true"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnTest"
            android:id="@+id/btnClearNotify"
            android:onClick="buttonClicked"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_below="@+id/tvTest"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnTestNotification"
            android:id="@+id/btnTestNotify"
            android:onClick="buttonClicked"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_below="@+id/btnClearNotify"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/btnTestNotify"
            android:layout_alignLeft="@+id/btnTestNotify"/>

</RelativeLayout>
</ScrollView>
